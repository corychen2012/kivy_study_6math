#:kivy 1.0

<Math>:
    display_label: display_label
    total_label: total_label
    wrong_label: wrong_label

    BoxLayout:
        orientation: 'vertical'
        cols: 1
        Label:
            id: total_label
            text: "totle:100/100 "
            text_size: self.size
            halign: 'right'
            size_hint:1,0.1
        Label:
            id: wrong_label
            text: "wrong:20/20 "
            text_size: self.size
            halign: 'right'
            size_hint:1,0.1
        Label:
            id: display_label
            text_size: self.size
            font_size: '72sp'
            halign: 'center'
            valign: 'center'
            markup: True

        GridLayout:
            cols:5
            Button:
                text: "1"
                font_size: '48sp'
                on_release: root.do_calc('1')
            Button:
                text: "2"
                font_size: '48sp'
                on_release: root.do_calc('2')
            Button:
                text: "3"
                font_size: '48sp'
                on_release: root.do_calc('3')
            Button:
                text: "4"
                font_size: '48sp'
                on_release: root.do_calc('4')
            Button:
                text: "5"
                font_size: '48sp'
                on_release: root.do_calc('5')
            Button:
                text: "6"
                font_size: '48sp'
                on_release: root.do_calc('6')
            Button:
                text: "7"
                font_size: '48sp'
                on_release: root.do_calc('7')
            Button:
                text: "8"
                font_size: '48sp'
                on_release: root.do_calc('8')
            Button:
                text: "9"
                font_size: '48sp'
                on_release: root.do_calc('9')
            Button:
                text: "0"
                font_size: '48sp'
                on_release: root.do_calc('0')